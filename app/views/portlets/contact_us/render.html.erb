<h1><%= @portlet.name %></h1>

<div class="contact_us_form">
	
  <% form_for @question, :url => cms_handler_path(@portlet, "action") do |f| %>
	<%= error_messages_for :question %>

	<fieldset>
		
		<p>
			<%= f.label :name %>
		    <%= f.text_field :name %>
		</p>

		<p>
			<%= f.label :email %>
	    	<%= f.text_field :email %>
		</p>

		<p>
			<%= f.label :subject %>
	    	<%= f.text_field :subject %>
		</p>

		<p>
	    	<%= f.text_area :message %>
		</p>

		<p>
	    	<%= f.submit "Submit" %>
		</p>

	</fieldset>

  <% end %>

</div>